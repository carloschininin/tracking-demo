{{ form_start(form) }}
{#    {{ form_widget(form) }}#}

    {{ form_row(form.fechaRegistro) }}
    {{ form_row(form.fechaEnvio) }}
    {{ form_row(form.cliente) }}
    {{ form_row(form.empleado) }}

    <ul id="{{ form.detalles.vars.id }}"
        class="list-group"
        data-index="{{ form.detalles.children|length > 0 ? form.detalles.children|last.vars.name + 1 : 0 }}"
        data-prototype="{{ form_widget(form.detalles.vars.prototype)|e('html_attr') }}"
        {% if form.detalles.vars.prototype.vars.name %}
            data-prototype-name="{{ form.detalles.vars.prototype.vars.name | e }}"
        {% endif %}
    >
        {% for detalle in form.detalles %}
            <li class="list-group-item pe-sm-12 collection_item" style="position: relative;">
                {{ form_row(detalle.descripcion) }}
                {{ form_row(detalle.peso) }}
            </li>
        {% endfor %}
    </ul>

    <button type="button"
        class="btn btn-sm btn-success add_collection_item"
        data-collection-holder-id="{{ form.detalles.vars.id }}"><i class="fa fa-plus"></i> Agregar
    </button>

    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
